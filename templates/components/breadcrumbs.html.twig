<div class="row mb-3">
    <div class="col-12">
        {% for index, breadcrumb in breadcrumbs %}
            <a data-toggle="tooltip"
               data-placement="bottom"
               title="{{ breadcrumb.tooltip }}"
               href="{{ breadcrumb.href }}">{{ breadcrumb.title }}</a>
            {% if index < breadcrumbs|length - 1 %}
                <i class="fa fa-chevron-right"></i>
            {% endif %}
        {% endfor %}
    </div>
</div>
