{% extends 'base.html.twig' %}

{% block title %}Page{% endblock %}

{% block body %}
    <h1>Page</h1>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ page.url }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Snapshots</h2>
    <table class="table table-striped table-bordered">
        <tbody>
        {% for snapshot in page.snapshots %}
            <tr>
                <td><a href="{{ path('page_snapshot_show', {'id': snapshot.id}) }}">{{ snapshot.hash }}</a></td>
                <td>
                    <a href="{{ path('page_snapshot_show', {'id': snapshot.id}) }}">show</a>
                    <a href="{{ path('page_snapshot_edit', {'id': snapshot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('page_index') }}">back to list</a>

    <a href="{{ path('page_edit', {'id': page.id}) }}">edit</a>

    <a href="{{ path('page_new_snapshot', {'id': page.id}) }}">new snapshot</a>

    {{ include('page/_delete_form.html.twig') }}
{% endblock %}
