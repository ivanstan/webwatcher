{% extends 'base.html.twig' %}

{% block title %}Page {{ page.name }} | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-10">
            <h1>Page {{ page.name }}</h1>
        </div>
        <div class="col-2">
            {{ include('page/_delete_form.html.twig') }}
            <a class="float-right btn btn-primary mt-2 mr-2" href="{{ path('page_edit', {'project': page.project.id, 'page': page.id}) }}">
                <i class="fa fa-edit"></i>
            </a>
        </div>
    </div>

    {{ breadcrumbs(page)|raw }}

    <table class="table">
        <tbody>
            <tr>
                <th>URL</th>
                <td>{{ page.path }}</td>
            </tr>
            <tr>
                <th>Average Response Time</th>
                <td>{{ page.averageResponseTime|number_format(2) }} sec</td>
            </tr>
            <tr>
                <td colspan="2">
                    <canvas class="response-time-chart" id="response-time-chart-1" height="50"></canvas>
                </td>
            </tr>
        </tbody>
    </table>

    <h2>Compare</h2>

    <div class="compare-selector compare-page-snapshots-selector mb-3" data-path="{{ path('compare_page_snapshot', {'snapshot1': 'snapshot1', 'snapshot2': 'snapshot2'}) }}">
        <select class="custom-select" name="snapshot1">
            {% for snapshot in page.snapshots %}
                <option value="{{ snapshot.id }}">{{ snapshot.timestamp|date('d/m/Y h:m:s') }} {{ snapshot.hash }}</option>
            {% endfor %}
        </select>

        <select class="custom-select" name="snapshot2">
            {% for index, snapshot in page.snapshots %}
                <option value="{{ snapshot.id }}" {{ (index == 1) ? 'selected' : '' }}>{{ snapshot.timestamp|date('d/m/Y h:m:s') }} {{ snapshot.hash }}</option>
            {% endfor %}
        </select>

        <button class="btn btn-primary" type="button">Compare</button>
    </div>

    <div class="row mb-3">
        <div class="col-10">
            <h2>Snapshots</h2>
        </div>
        <div class="col-2">
            <a class="btn btn-primary float-right mt-1"  href="{{ path('snapshot_page_new', {'project': page.project.id, 'page': page.id}) }}">
                <i class="fa fa-camera"></i>
            </a>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Hash</td>
                <td>HTTP Status</td>
                <td>Timestamp</td>
            </tr>
        </thead>
        <tbody>
        {% for snapshot in page.snapshots %}
            <tr>
                <td><a href="{{ path('page_snapshot_show', {'project': page.project.id, 'page': page.id, 'snapshot': snapshot.id}) }}">{{ snapshot.hash }}</a></td>
                <td>{% include 'components/response-code.html.twig' with {code: snapshot.responseCode} only %}</td>
                <td>{{ snapshot.timestamp|date('d/m/Y h:m:s') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
