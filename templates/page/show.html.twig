{% extends 'base.html.twig' %}

{% block title %}Page{% endblock %}

{% block body %}
    <h1>Page</h1>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ page.path }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Snapshots</h2>

    <a class="btn btn-primary mb-3" href="{{ path('page_new_snapshot', {'project': page.project.id, 'id': page.id}) }}">new snapshot</a>

    <table class="table table-striped table-bordered">
        <tbody>
        {% for snapshot in page.snapshots %}
            <tr>
                <td><a href="{{ path('page_snapshot_show', {'project': page.project.id, 'page': page.id, 'id': snapshot.id}) }}">{{ snapshot.hash }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('page_edit', {'project': page.project.id, 'id': page.id}) }}">edit</a>

    {{ include('page/_delete_form.html.twig') }}
{% endblock %}
