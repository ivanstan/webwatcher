{% extends 'base.html.twig' %}

{% block title %}PageSnapshot{% endblock %}

{% block javascripts %}
<script src="{{ asset('build/monaco/editor.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/monaco/editor.css') }}">
{% endblock %}

{% block body %}
    <h1>PageSnapshot</h1>

    {{ breadcrumbs(page_snapshot)|raw }}

    <table>
        <tbody>
        <tr>
            <th>Timestamp</th>
            <td>{{ page_snapshot.timestamp|date('d/m/Y h:m:s') }}</td>
        </tr>
        <tr>
            <th>Response code</th>
            <td><span class="badge badge-secondary">{{ page_snapshot.responseCode }}</span></td>
        </tr>
        </tbody>
    </table>

    <div class="monaco-editor" data-code="{{ page_snapshot.body }}" data-language="html" style="height: 300px"></div>

    <td><img src="{{ asset(page_snapshot.image) }}"></td>

    {{ include('page_snapshot/_delete_form.html.twig') }}
{% endblock %}
