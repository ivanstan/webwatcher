<form method="post" action="{{ path('authenticator_delete', {'project': project.id, 'id': project.authenticator.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.authenticator.id) }}">
    <button data-toggle="tooltip" data-placement="left" title="" class="btn btn-danger float-right" data-original-title="Remove authenticator">
        <i class="fa fa-trash-alt"></i>
    </button>
</form>
