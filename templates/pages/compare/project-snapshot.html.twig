{% extends 'content.html.twig' %}

{% block title %}Compare | {{ parent() }}{% endblock %}

{% set snapshot1Suffix = '' %}
{% set snapshot2Suffix = '' %}
{% if snapshot1.id != snapshot2.id %}
    {% set snapshot1Suffix = '(' ~ snapshot1.timestamp|time_diff(snapshot2.timestamp) ~ ')' %}
    {% set snapshot2Suffix = '(Newer)' %}
{% endif %}

{% block javascripts %}
    <script src="{{ asset('assets/js/resemble.js') }}"></script>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-10">
            <h1>Compare project snapshots</h1>
        </div>
    </div>

    {% include 'components/flash-messages.html.twig' %}

    <div class="row">
        <div class="col-5">
            {{ breadcrumbs(snapshot1, snapshot1Suffix)|raw }}
        </div>
        <div class="col-2"></div>
        <div class="col-5">
            {{ breadcrumbs(snapshot2, snapshot2Suffix)|raw }}
        </div>
    </div>

    {% for item in compare %}
        {% set page1 = item.snapshot1 is defined ? item.snapshot1.page : null %}
        {% set page2 = item.snapshot2 is defined ? item.snapshot2.page : null %}

        <div class="row">
            <div class="col-5">
                <table class="mb-0">
                    <tr>
                        <td>
                            <h4 class="mt-2">
                                {% if page1 is not null %}
                                    <a href="{{ path('page_show', {'project': page1.project.id,'page': page1.id}) }}">{{ page1.name }}</a>
                                {% elseif page2 is not null %}
                                    <a href="{{ path('page_show', {'project': page2.project.id,'page': page2.id}) }}">{{ page2.name }}</a>
                                {% endif %}

                            </h4>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-2">
                <table class="mb-0">
                    <tr>
                        <td class="pt-2">
                            {% if item.snapshot1 is defined and item.snapshot2 is defined %}
                                <a data-toggle="tooltip"
                                   data-placement="bottom"
                                   title="Visit page"
                                   target="_blank" href="{{ page1.url }}">
                                    <i class="fa fa-external-link-alt"></i>
                                </a>
                                <a data-toggle="tooltip"
                                   data-placement="bottom"
                                   title="Compare page"
                                   target="_blank"
                                   href="{{ path('compare_page_snapshot', {'snapshot1': item.snapshot1.id, 'snapshot2': item.snapshot2.id}) }}"><i
                                            class="fa fa-balance-scale"></i></a>
                                <a data-toggle="tooltip"
                                   data-placement="bottom"
                                   title="View diff"
                                   target="_blank"
                                   href="{{ path('editor', {'snapshot1': item.snapshot1.id, 'snapshot2': item.snapshot2.id}) }}">
                                    <i class="fas fa-file-code"></i>
                                </a>
                                <a data-toggle="tooltip"
                                   data-placement="bottom"
                                   title="View diff"
                                   target="_blank"
                                   href="{{ path('compare_image', {'snapshot1': item.snapshot1.id, 'snapshot2': item.snapshot2.id}) }}">
                                    <i class="fas fa-images"></i>
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row page-compare">
            <div class="col-5 mb-0">
                {% if item.snapshot1 is defined %}
                    <table class="table">
                        <tr>
                            <th>HTTP Response</th>
                            <td>{% include 'components/response-code.html.twig' with {code: item.snapshot1.responseCode} only %}</td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <a target="_blank" class="cursor-zoom-in" href="{{ asset(item.snapshot1.image) }}">
                                    <img class="img-fluid screenshot-1" data-mh="img-equal-{{ loop.index }}"
                                         src="{{ asset(item.snapshot1.image) }}">
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <a target="_blank"
                                   href="{{ path('page_snapshot_show', {'project': page1.project.id, 'page': page1.id, 'snapshot': item.snapshot1.id}) }}">View
                                    snapshot</a>
                                <a target="_blank" href="{{ path('editor', {'snapshot1': item.snapshot1.id}) }}">View
                                    Source</a>
                                <a target="_blank"
                                   href="{{ path('iframe', {'snapshot': item.snapshot1.id}) }}">IFrame</a>
                            </td>
                        </tr>
                    </table>
                {% endif %}
            </div>

            <div class="col-2 mb-0">
                {% if item.snapshot1 is defined and item.snapshot2 is defined %}
                    <table class="table text-center">
                        <tr>
                            <td>
                                {% if item.snapshot1.responseCode == item.snapshot2.responseCode %}
                                    <span class="badge badge-success">OK</span>
                                {% else %}
                                    <span class="badge badge-warning">NOT</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {% if item.snapshot1.hash == item.snapshot2.hash %}
                                    <span class="badge badge-success">OK</span>
                                {% else %}
                                    <a target="_blank"
                                       href="{{ path('editor', {'snapshot1': item.snapshot1.id, 'snapshot2': item.snapshot2.id}) }}">
                                        <span class="badge badge-warning"><i class="fa fa-file-code"></i> NOT</span>
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span>Image mismatch: </span><span class="image-analysis"></span>
                            </td>
                        </tr>
                    </table>
                {% endif %}
            </div>

            <div class="col-5">
                {% if item.snapshot2 is defined %}
                    <table class="table mb-0">
                        <tr>
                            <th>HTTP Response</th>
                            <td>{% include 'components/response-code.html.twig' with {code: item.snapshot2.responseCode} only %}</td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <a target="_blank" class="cursor-zoom-in" href="{{ asset(item.snapshot2.image) }}">
                                    <img class="img-fluid screenshot-2" data-mh="img-equal-{{ loop.index }}"
                                         src="{{ asset(item.snapshot2.image) }}">
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <a target="_blank"
                                   href="{{ path('page_snapshot_show', {'project': page2.project.id, 'page': page2.id, 'snapshot': item.snapshot2.id}) }}">View
                                    snapshot</a>
                                <a target="_blank" href="{{ path('editor', {'snapshot1': item.snapshot2.id}) }}">View
                                    Source</a>
                                <a target="_blank"
                                   href="{{ path('iframe', {'snapshot': item.snapshot2.id}) }}">IFrame</a>
                            </td>
                        </tr>
                    </table>
                {% endif %}
            </div>
        </div>
<hr>
    {% else %}

    {% endfor %}

{% endblock %}
