{% extends 'base.html.twig' %}

{% block body %}
    <div class="container vertical-align">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <h1 class="title">Create admin user</h1>
                {% include 'components/flash-messages.html.twig' %}
                {{ form_start(form) }}
                {{ form_row(form.username) }}
                {{ form_row(form.email) }}
                {{ form_row(form.password) }}
                <button class="btn btn-primary mb-3">Install</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
