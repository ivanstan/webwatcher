{% extends 'content.html.twig' %}

{% block title %}Page {{ page.name }} | {{ parent() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-10">
            <h1>Page {{ page.name }}</h1>
        </div>
        <div class="col-2">
            {{ include('pages/page/_delete_form.html.twig') }}
            <a data-toggle="tooltip"
               data-placement="bottom"
               title="Edit page"
               class="float-right btn btn-primary mt-2 mr-2"
               href="{{ path('page_edit', {'project': page.project.id, 'page': page.id}) }}">
                <i class="fa fa-edit"></i>
            </a>
        </div>
    </div>

    {{ breadcrumbs(page)|raw }}

    {% include 'components/flash-messages.html.twig' %}

    <table class="table">
        <tbody>
            <tr>
                <th>
                    <p class="mt-2 mb-0">Path</p>
                </th>
                <td>
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" class="form-control" disabled value="{{ page.path }}">
                            <div class="input-group-append">
                                <a class="btn btn-secondary" href="{{ page.url }}" target="_blank">
                                    <i class="fas fa-external-link-alt"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-item nav-link active" data-toggle="tab" href="#snapshots" role="tab">Snapshots</a>
            <a class="nav-item nav-link" data-toggle="tab" href="#actions" role="tab">Actions</a>
        </div>
    </nav>

    <div class="tab-content">
        <div class="tab-pane fade show active" id="snapshots" role="tabpanel" aria-labelledby="nav-home-tab">
            {% include 'pages/page/_snapshot_table.html.twig' %}
        </div>
        <div class="tab-pane fade show" id="actions" role="tabpanel" aria-labelledby="nav-home-tab">
            {% include 'pages/page/_action_table.html.twig' %}
        </div>
    </div>

{% endblock %}
