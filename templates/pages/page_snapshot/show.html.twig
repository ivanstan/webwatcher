{% extends 'base.html.twig' %}

{% block title %}Snapshot {{ snapshot.hash }} | {{ parent() }}{% endblock %}

{% block javascripts %}
<script src="{{ asset('build/monaco/editor.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/monaco/editor.css') }}">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-10">
            <h1>Snapshot</h1>
        </div>
        <div class="col-2">
            {{ include('pages/page_snapshot/_delete_form.html.twig') }}
        </div>
    </div>

    {{ breadcrumbs(snapshot)|raw }}

    {% include 'components/page-snapshot-details.html.twig' with {snapshot: snapshot} only %}

    {% if snapshot.body %}
        <div class="monaco-editor mb-3" data-code="{{ snapshot.body }}" data-language="html" style="height: 300px"></div>
    {% endif %}

    {% if snapshot.image %}
        <td><img class="img-fluid" alt="{{ snapshot.hash }}" src="{{ asset(snapshot.image) }}"></td>
    {% endif %}

{% endblock %}
