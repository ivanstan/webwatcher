{% extends 'content.html.twig' %}

{% block title %}Project {{ project.name }} | {{ parent() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-10">
            <h1>Project {{ project.name }}</h1>
        </div>
        <div class="col-2">
            {{ include('pages/project/_delete_form.html.twig') }}
            <a data-toggle="tooltip"
               data-placement="bottom"
               title="Edit project"
               class="btn btn-primary mt-2 mr-2 float-right "
               href="{{ path('project_edit', {'project': project.id}) }}">
                <i class="fa fa-edit"></i>
            </a>
            <a data-toggle="tooltip"
               data-placement="bottom"
               title="Create project snapshot"
               class="btn btn-primary mt-2 mr-2 float-right"
               href="{{ path('project_snapshot_new', {"project": project.id}) }}">
                <i class="fa fa-camera"></i>
            </a>
        </div>
    </div>

    {{  breadcrumbs(project)|raw }}

    {% include 'components/flash-messages.html.twig' %}

    <table class="table">
        <tbody>
        <tr>
            <th>Base URL</th>
            <td>{{ project.baseUrl }}</td>
        </tr>
        </tbody>
    </table>

    <div class="row mb-3">
        <div class="col-10">
            <h2>Pages</h2>
        </div>
        <div class="col-2">
            <div class="btn-group float-right">
                <button type="button" class="btn btn-primary"
                        onclick="location.href='{{ path('page_new', {'project': project.id}) }}';">
                    <i class="fa fa-plus-square"></i>
                </button>
                <button type="button"
                        class="btn btn-primary dropdown-toggle dropdown-toggle-split"
                        data-toggle="dropdown"
                        aria-haspopup="true"
                        aria-expanded="false">
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="{{ path('project_bulk_add', {'project': project.id, 'type': 'sitemap'}) }}">Sitemap</a>
                    <a class="dropdown-item" href="{{ path('project_bulk_add', {'project': project.id, 'type': 'crawl'}) }}">Crawl</a>
                </div>
            </div>

        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Path</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in project.pages %}
            <tr>
                <td><a href="{{ path('page_show', {'project': project.id, 'page': page.id}) }}">{% if page.name %}{{ page.name }}{% else %}{{ page.path }}{% endif %}</a></td>
                <td>{{ page.path }}</td>
                <td>
                    <a data-toggle="tooltip"
                       data-placement="bottom"
                       title="Edit page"
                       class="mr-1 ml-1"
                       href="{{ path('page_edit', {'project': project.id, 'page': page.id}) }}">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a data-toggle="tooltip"
                       data-placement="bottom"
                       title="Visit page"
                       class="mr-1 ml-1"
                       target="_blank"
                       href="{{ page.url }}">
                        <i class="fa fa-external-link-alt"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">This project has no pages.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if project.snapshots is not empty %}
        <h2 class="mb-3">Snapshots</h2>

        <div class="compare-selector compare-project-snapshots-selector mb-3" data-path="{{ path('compare_project_snapshot', {'snapshot1': 'snapshot1', 'snapshot2': 'snapshot2'}) }}">
            <select class="custom-select" name="snapshot1">
                {% set newest = project.snapshots[0].timestamp %}
                {% for index, snapshot in project.snapshots %}
                    <option value="{{ snapshot.id }}">{{ snapshot.timestamp|date('d/m/Y H:i:s') }}
                        - {% if index == 0 %}Newest{% else %}{{ snapshot.timestamp|time_diff(newest) }}{% endif %}</option>
                {% endfor %}
            </select>

            <select class="custom-select" name="snapshot2">
                {% set newest = project.snapshots[0].timestamp %}
                {% for index, snapshot in project.snapshots %}
                    <option value="{{ snapshot.id }}" {{ (index == 1) ? 'selected' : '' }}>{{ snapshot.timestamp|date('d/m/Y H:i:s') }}
                        - {% if index == 0 %}Newest{% else %}{{ snapshot.timestamp|time_diff(newest) }}{% endif %}</option>
                {% endfor %}
            </select>

            <button class="btn btn-primary" type="button">Compare</button>
        </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Timestamp</th>
                <th>Delta Time</th>
            </tr>
        </thead>
        <tbody>
        {% set newest = project.snapshots[0].timestamp %}
        {% for index, snapshot in project.snapshots %}
            <tr>
                <td><a href="{{ path('project_snapshot_show', {"project": project.id, "snapshot": snapshot.id}) }}">{{ snapshot.timestamp|date('d/m/Y H:i:s') }}</a></td>
                <td>{% if index == 0 %}Newest{% else %}{{ snapshot.timestamp|time_diff(newest) }}{% endif %}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" class="text-center">No snapshots here.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endif %}

{% endblock %}
