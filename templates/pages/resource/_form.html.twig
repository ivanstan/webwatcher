{{ form_start(form) }}
    {{ form_row(form.name) }}

    <div class="form-group">
        <label for="resource_name" class="form-control-label">Path</label>
        <div class="row">
            <div class="col-1">
                {{ form_widget(form.protocol) }}
            </div>

            <div class="col-3">
                <input type="text" class="form-control" disabled value="{{ resource.project.domain }}">
            </div>

            <div class="col-8">
                {{ form_widget(form.path) }}
            </div>
        </div>
    </div>

    <button class="btn btn-primary">{{ button_label|default('Submit') }}</button>
{{ form_end(form) }}
