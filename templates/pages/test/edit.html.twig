{% extends 'content.html.twig' %}

{% block title %}Edit Test Suite | {{ parent() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-10">
            <h1>Edit Test Suite</h1>
        </div>
        <div class="col-2">
            {{ include('pages/action/_delete_form.html.twig', {'action': action}) }}
        </div>
    </div>

    {{ breadcrumbs(action)|raw }}

    {{ include('pages/test/_form.html.twig') }}

    {% if forms is defined and form is not empty %}
        <hr>

        <div>
            {% for form in forms %}

                {% if form.vars.name == 'assert_http_code' %}
                    {{ include('pages/test/asserts/http_code.html.twig') }}
                {% endif %}

            {% endfor %}
        </div>
    {% endif %}

    {#{{ include('pages/test/_delete_form.html.twig') }}#}
{% endblock %}
