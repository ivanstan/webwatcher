{% extends 'content.html.twig' %}

{% block title %}User | {{ parent() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-10">
            <h1>User</h1>
        </div>
        <div class="col-2">
            {{ include('pages/user/_delete_form.html.twig') }}
            <a data-toggle="tooltip"
               data-placement="bottom"
               title="Edit user"
               class="float-right btn btn-primary mt-2 mr-2"
               href="{{ path('user_edit', {'id': user.id}) }}">
                <i class="fa fa-edit"></i>
            </a>
        </div>
    </div>

    {{ breadcrumbs(user)|raw }}

    {% include 'components/flash-messages.html.twig' %}

    <table class="table">
        <tbody>
        <tr>
            <th>Username</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Enabled</th>
            <td>
                {% if user.enabled %}
                    <span class="badge badge-success">Yes</span>
                {% else %}
                    <span class="badge badge-danger">No</span>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Last Login</th>
            <td>{{ user.lastLogin ? user.lastLogin|date(datetime_format()) : '' }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>
                {% for role in user.roles %}
                    <span class="badge badge-secondary">{{ role|replace({'ROLE_': '' }) }}</span>
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>

{% endblock %}
