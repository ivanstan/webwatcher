{% extends 'base.html.twig' %}

{% block title %}Project {{ project.name }} | {{ parent() }}{% endblock %}

{% block body %}
    <h1>Project {{ project.name }}</h1>

    <h2>Pages</h2>
    <table class="table table-striped table-bordered">
        <tbody>
        {% for page in project.pages %}
            <tr>
                <td><a href="{{ path('page_show', {'project': project, 'id': page.id}) }}">{{ page.url }}</a></td>
                <td>
                    <a href="{{ path('page_edit', {'project': project, 'id': page.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('project_index') }}">back to list</a>

    <a href="{{ path('project_edit', {'id': project.id}) }}">edit</a>

    {{ include('project/_delete_form.html.twig') }}
{% endblock %}
