{% extends 'base.html.twig' %}

{% block title %}Project {{ project.name }} | {{ parent() }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-10">
            <h1>Project {{ project.name }}</h1>
        </div>
        <div class="col-2">

            <i class="fas fa-edit"></i>

            <i class="fas fa-trash"></i>

            <a class="btn btn-primary" href="{{ path('project_edit', {'project': project.id}) }}">Edit</a>
            {{ include('project/_delete_form.html.twig') }}
        </div>
    </div>

    {{  breadcrumbs(project)|raw }}

    <table class="table table-striped table-bordered">
        <tbody>
        <tr>
            <td>Base URL</td>
            <td>{{ project.baseUrl }}</td>
        </tr>
        </tbody>
    </table>

    <h2>Pages</h2>

    <a class="btn btn-primary mb-3" href="{{ path('page_new', {'project': project.id}) }}">
        <i class="fa fa-plus-square" aria-hidden="true"></i> New Page
    </a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Name</td>
                <td>Path</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
        {% for page in project.pages %}
            <tr>
                <td><a href="{{ path('page_show', {'project': project.id, 'page': page.id}) }}">{{ page.name }}</a></td>
                <td>{{ page.path }}</td>
                <td>
                    <a href="{{ path('page_edit', {'project': project.id, 'page': page.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
