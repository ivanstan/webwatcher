{% extends 'base.html.twig' %}

{% block title %}Project {{ project.name }} | {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-10">
            <h1>Project {{ project.name }}</h1>
        </div>
        <div class="col-2">
            {{ include('project/_delete_form.html.twig') }}
            <a class="btn btn-primary mt-2 mr-2 float-right" href="{{ path('project_edit', {'project': project.id}) }}">
                <i class="fa fa-edit"></i>
            </a>
        </div>
    </div>

    {{  breadcrumbs(project)|raw }}

    <table class="table table-striped table-bordered">
        <tbody>
        <tr>
            <td>Base URL</td>
            <td>{{ project.baseUrl }}</td>
        </tr>
        </tbody>
    </table>

    <div class="row mb-3">
        <div class="col-10">
            <h2>Pages</h2>
        </div>
        <div class="col-2">
            <a class="btn btn-primary float-right mt-1" href="{{ path('page_new', {'project': project.id}) }}">
                <i class="fa fa-plus-square"></i>
            </a>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Name</td>
                <td>Path</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
        {% for page in project.pages %}
            <tr>
                <td><a href="{{ path('page_show', {'project': project.id, 'page': page.id}) }}">{{ page.name }}</a></td>
                <td>{{ page.path }}</td>
                <td>
                    <a href="{{ path('page_edit', {'project': project.id, 'page': page.id}) }}">
                        <i class="fa fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
